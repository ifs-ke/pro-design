// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// --_ MODELS --_

model Client {
  id              String        @id @default(cuid())
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  name            String
  email           String?
  phone           String?
  status          String        @default("Lead") // Replaces ClientStatus enum
  responsiveness  String        @default("Warm") // Replaces ResponsivenessStatus enum
  properties      Property[]
  projects        Project[]
  quotes          Quote[]
  interactions    Interaction[]
}

model Interaction {
  id        String   @id @default(cuid())
  timestamp DateTime @default(now())
  type      String   // Replaces InteractionType enum
  notes     String
  client    Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)
  clientId  String
}

model Property {
  id           String    @id @default(cuid())
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  name         String
  address      String?
  propertyType String    @default("Residential") // Replaces PropertyType enum
  notes        String?
  client       Client    @relation(fields: [clientId], references: [id], onDelete: Cascade)
  clientId     String
  projects     Project[]
}

model Project {
  id           String    @id @default(cuid())
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  name         String
  client       Client?   @relation(fields: [clientId], references: [id])
  clientId     String?
  property     Property? @relation(fields: [propertyId], references: [id])
  propertyId   String?
  scope        String?
  timeline     String?
  projectType  String?   @default("Residential")
  services     String?
  roomCount    Int?
  otherSpaces  String?
  status       String    @default("Planning") // Replaces ProjectStatus enum
  quotes       Quote[]
}

model Quote {
  id        String   @id @default(cuid())
  timestamp DateTime @default(now())
  status    String   @default("Draft") // Replaces QuoteStatus enum

  client    Client?  @relation(fields: [clientId], references: [id])
  clientId  String?
  project   Project? @relation(fields: [projectId], references: [id])
  projectId String?

  // JSON fields stored as strings
  formValues            String
  allocations           String
  calculations          String
  suggestedCalculations String
}
