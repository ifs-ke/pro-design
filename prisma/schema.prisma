// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["dataProxy"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Client {
  id              String        @id @default(cuid())
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  name            String
  email           String?
  phone           String?
  status          String        @default("Lead") // Lead, Active, OnHold, Inactive
  responsiveness  String        @default("Warm") // Hot, Warm, Cold
  interactions    Interaction[]
  properties      Property[]
  projects        Project[]
  quotes          Quote[]
}

model Interaction {
  id         String   @id @default(cuid())
  timestamp  DateTime @default(now())
  clientId   String
  client     Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)
  type       String // Email, Call, Meeting, Other
  notes      String
}

model Property {
  id           String    @id @default(cuid())
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  name         String
  address      String?
  propertyType String    @default("Residential") // Residential, Commercial, Other
  notes        String?
  clientId     String
  client       Client    @relation(fields: [clientId], references: [id], onDelete: Cascade)
  projects     Project[]
}

model Project {
  id          String    @id @default(cuid())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  name        String
  clientId    String?
  client      Client?   @relation(fields: [clientId], references: [id])
  propertyId  String?
  property    Property? @relation(fields: [propertyId], references: [id])
  quotes      Quote[]
  scope       String?
  timeline    String?
  projectType String?   @default("Residential") // Residential, Commercial, Hospitality, Other
  services    String?
  roomCount   Int?
  otherSpaces String?
  status      String    @default("Planning") // Planning, InProgress, Completed, OnHold, Cancelled
}

model Quote {
  id        String   @id @default(cuid())
  timestamp DateTime @default(now())
  status    String   @default("Draft") // Draft, Sent, Approved, Declined
  clientId  String?
  client    Client?  @relation(fields: [clientId], references: [id])
  projectId String?
  project   Project? @relation(fields: [projectId], references: [id])

  // JSON fields to store complex, nested data from the form
  formValues            String
  allocations           String
  calculations          String
  suggestedCalculations String
}
