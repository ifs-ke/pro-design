
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Client {
  id             String     @id @default(cuid())
  name           String
  email          String     @unique
  phone          String?
  notes          String?
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt
  responsiveness String?    @default("Warm")
  status         String     @default("Lead")

  // SECURITY: Link to the user who owns this client
  userId         String
  
  projects       Project[]
  properties     Property[]
  quotes         Quote[]
  interactions   Interaction[]
  invoices       Invoice[]

  @@index([userId])
}

model Property {
  id        String    @id @default(cuid())
  name      String
  address   String
  clientId  String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  // SECURITY: Link to the user who owns this property
  userId    String

  projects  Project[]
  client    Client    @relation(fields: [clientId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Project {
  id          String    @id @default(cuid())
  name        String
  clientId    String
  propertyId  String?
  scope       String?
  timeline    String?
  status      String?
  projectType String?
  services    String?
  roomCount   Int?
  otherSpaces String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // SECURITY: Link to the user who owns this project
  userId      String

  client      Client    @relation(fields: [clientId], references: [id], onDelete: Cascade)
  property    Property? @relation(fields: [propertyId], references: [id])
  quotes      Quote[]
  invoices    Invoice[]

  @@index([userId])
}

model Quote {
  id                    String    @id @default(cuid())
  clientId              String
  projectId             String?
  status                String
  formValues            Json
  allocations           Json
  calculations          Json
  suggestedCalculations Json
  timestamp             DateTime
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  // SECURITY: Link to the user who owns this quote
  userId                String

  client                Client    @relation(fields: [clientId], references: [id], onDelete: Cascade)
  project               Project?  @relation(fields: [projectId], references: [id])
  invoices              Invoice[]

  @@index([userId])
}

model Interaction {
  id        String   @id @default(cuid())
  clientId  String
  type      String
  notes     String
  timestamp DateTime @default(now())
  updatedAt DateTime @updatedAt

  // SECURITY: Link to the user who owns this interaction
  userId    String

  client    Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Invoice {
  id            String   @id @default(cuid())
  invoiceNumber String   @unique
  amount        Float
  status        String   @default("Draft")
  dueDate       DateTime
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  clientId      String
  projectId     String?
  quoteId       String?

  // SECURITY: Link to the user who owns this invoice
  userId        String

  client        Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)
  project       Project? @relation(fields: [projectId], references: [id])
  quote         Quote?   @relation(fields: [quoteId], references: [id])

  @@index([userId])
}
